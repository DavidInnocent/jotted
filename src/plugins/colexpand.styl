.jotted.jotted-plugin-colexpand
  display: flex
  flex-flow: row wrap
  user-select: none;
  -webkit-user-select: none;
  -moz-user-select: none;

  .jotted-pane-result
    flex: 1 100%

  .jotted-editor .CodeMirror
    height: calc(100% - 39px)

  .jotted-nav
    display: none;

  .jotted-pane
    padding-top: 0
    height: 50%

    .jotted-pane-title
      display: block;
      background: rgba(51,51,51,0.08);
      border-bottom: 1px solid rgba(51,51,51,0.2);
      padding: 0 0.8em;
      line-height: 2.4em;

      &-result
        display: none

  &.jotted-has-html .jotted-pane-html,
  &.jotted-has-css .jotted-pane-css,
  &.jotted-has-js .jotted-pane-js,
  &.jotted-plugin-console .jotted-pane-console
    position: relative
    visibility: visible

// widths
//
.jotted-plugin-colexpand.jotted-has-html .jotted-pane,
.jotted-plugin-colexpand.jotted-has-css .jotted-pane,
.jotted-plugin-colexpand.jotted-has-js .jotted-pane {
  max-width: 100%
  width: 100%
}

.jotted-plugin-colexpand.jotted-has-html.jotted-has-css .jotted-pane-html,
.jotted-plugin-colexpand.jotted-has-html.jotted-has-css .jotted-pane-css,
.jotted-plugin-colexpand.jotted-has-html.jotted-has-js .jotted-pane-html,
.jotted-plugin-colexpand.jotted-has-html.jotted-has-js .jotted-pane-js,
.jotted-plugin-colexpand.jotted-has-css.jotted-has-js .jotted-pane-css,
.jotted-plugin-colexpand.jotted-has-css.jotted-has-js .jotted-pane-js {
  max-width: 50%
  width: 50%
}

.jotted-plugin-colexpand.jotted-has-html.jotted-has-css.jotted-has-js .jotted-pane-html,
.jotted-plugin-colexpand.jotted-has-html.jotted-has-css.jotted-has-js .jotted-pane-js,
.jotted-plugin-colexpand.jotted-has-html.jotted-has-css.jotted-has-js .jotted-pane-css {
  max-width: 33.3333%
  width: 33.3333%
}

// support console plugin
//
.jotted-plugin-console.jotted-plugin-colexpand
  .jotted-pane-title-console
    font-family: sans-serif;

  .jotted-console-clear
    top: 4.3em

.jotted-plugin-console.jotted-plugin-colexpand.jotted-has-html .jotted-pane,
.jotted-plugin-console.jotted-plugin-colexpand.jotted-has-css .jotted-pane,
.jotted-plugin-console.jotted-plugin-colexpand.jotted-has-js .jotted-pane
  width: 50%;

.jotted-plugin-console.jotted-plugin-colexpand.jotted-has-html.jotted-has-css .jotted-pane,
.jotted-plugin-console.jotted-plugin-colexpand.jotted-has-html.jotted-has-js .jotted-pane,
.jotted-plugin-console.jotted-plugin-colexpand.jotted-has-css.jotted-has-js .jotted-pane
  width: 33.33%;

.jotted-plugin-console.jotted-plugin-colexpand.jotted-has-html.jotted-has-css.jotted-has-js .jotted-pane
  width: 25%;

// suport colexpand plugin
//
.jotted-plugin-colexpand.jotted-plugin-colexpand .jotted-col-expand
  border-left: 1px solid #ddd;

